@model SmartFarmingAssistant.Models.Article

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- these are equivalent to ridmik.min.js -->
<!--
<script src='js/ridmikmap.js'></script>
<script src='js/StringBuilder.js'></script>
<script src='js/ridmikparser.js'></script>
-->
<script src='Scripts/js/ridmik.min.js'></script>
<script src="Scripts/js/script.js"></script>

<h2>Post Article</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p><b>Title: </b></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control",id="bangla" } })
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p><b>Description: </b></p>
            <div class="col-md-12">
                @Html.EditorFor(model => model.body, new { htmlAttributes = new { @class = "form-control", id="bangla2" ,rows="20"} })
                @Html.ValidationMessageFor(model => model.body, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <p><b>Select Product: </b></p>
            <div class="col-md-10">
                @Html.DropDownList("productId", null,"--Select---", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.productId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>

            <h3 style="background-color:red;text-align:center"><b>Press control+M to switch between Bangla and english type</b></h3>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/js/")
}
<script src="~/Scripts/js/ridmikparser.js"></script>
<script src="~/Scripts/js/ridmikmap.js"></script>
<script src="~/Scripts/js/script.js"></script>
<script src="~/Scripts/js/StringBuilder.js"></script>